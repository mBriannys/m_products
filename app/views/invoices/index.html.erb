<div class="container mx-auto">
  <h1 class="text-2xl font-bold my-4">Lista de Facturas</h1>

  <% if @invoices.any? %>
    <table class="min-w-full bg-white border border-gray-300">
      <thead>
      <tr>
        <th class="py-2 px-4 border-b">ID</th>
        <th class="py-2 px-4 border-b">Estado</th>
        <th class="py-2 px-4 border-b">Acciones</th>
      </tr>
      </thead>
      <tbody>
      <% @invoices.each do |invoice| %>
        <tr>
          <td class="py-2 px-4 border-b text-center"><%= invoice.id %></td>
          <td class="py-2 px-4 border-b text-center"><%= invoice.status.capitalize %></td>
          <td class="py-2 px-4 border-b text-center">
            <%= link_to "Mostrar", invoice, class: "text-blue-500 hover:text-blue-700 mr-2" %>
            <%= link_to "Eliminar", invoice, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "text-red-500 hover:text-red-700" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="mt-4">No hay facturas disponibles.</p>
  <% end %>
</div>
